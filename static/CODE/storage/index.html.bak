          username = d.username || document.getElementById('login-username').value;
          localStorage.setItem('token', token);
          localStorage.setItem('role', role);
          localStorage.setItem('username', username);
          document.cookie = "username=" + encodeURIComponent(username) + "; path=/";
          document.cookie = "token=" + encodeURIComponent(token) + "; path=/";
          afterLogin();
        } else {
          // If banned, set local ban flag with username, timestamp and reason
          if (d.banned) {
            let until = Date.now() + 100*365*24*3600*1000; // default perm
            let reason = 'No reason given.';
            let user = document.getElementById('login-username').value;
            let m = d.error && d.error.match(/for ([\dhms ]+)\. Reason: (.*)$/);
            if (m) {
              let t = m[1];
              let ms = 0;
              if (t.includes('d')) ms += parseInt(t) * 24 * 3600 * 1000;
              else if (t.includes('h')) ms += parseInt(t) * 3600 * 1000;
              else if (t.includes('m')) ms += parseInt(t) * 60 * 1000;
              else if (t.includes('s')) ms += parseInt(t) * 1000;
              until = Date.now() + ms;
              reason = m[2];
            }
            localStorage.setItem('user_test_025', JSON.stringify({ username: user, until, reason }));
            location.reload();
            return;
          }
          await customAlert(d.error || 'Login failed');
          if (d.error && d.error.toLowerCase().includes('verify')) {
            document.getElementById('register-message').innerText = 'Please check your email for a verification link.';
          }
        }
      });
    }

