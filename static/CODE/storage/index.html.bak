<script>
// --- Immediate ban check on page load ---
(function() {
  const BAN_KEY = 'user_test_025';
  let banData = localStorage.getItem(BAN_KEY);
  if (banData) {
    try {
      let ban = JSON.parse(banData);
      if (ban && ban.username && ban.until && Date.now() < ban.until) {
        showBanOverlay(ban);
        // Try to check with server if ban is lifted
        let token = localStorage.getItem('token');
        if (token && ban.username) {
          fetch('/api/user/ban-status', {
            headers: { Authorization: 'Bearer ' + token }
          }).then(r => r.json()).then(data => {
            if (data && data.banned === false) {
              localStorage.removeItem(BAN_KEY);
              location.reload();
            }
          }).catch(()=>{});
        }
        return;
      } else {
        localStorage.removeItem(BAN_KEY);
      }
    } catch {
      localStorage.removeItem(BAN_KEY);
    }
  }
  function showBanOverlay(ban) {
    let overlay = document.createElement('div');
    overlay.style.position = 'fixed';
    overlay.style.top = '0';
    overlay.style.left = '0';
    overlay.style.width = '100vw';
    overlay.style.height = '100vh';
    overlay.style.background = 'rgba(0,0,0,0.85)';
    overlay.style.zIndex = '99999';
    overlay.style.display = 'flex';
    overlay.style.alignItems = 'center';
    overlay.style.justifyContent = 'center';
    overlay.innerHTML = `<div id='ban-popup' style="background:#fff;padding:2em 3em;border-radius:12px;box-shadow:0 2px 16px #0006;min-width:320px;text-align:center;">
      <h2 style='color:#d32f2f;'>You are banned</h2>
      <p style='font-size:1.1em;'><b>Account:</b> ${ban.username}<br><b>Reason:</b> <span id='ban-reason'></span><br><b>Ban ends in:</b> <span id='ban-timer'></span></p>
    </div>`;
    document.body.appendChild(overlay);
    document.getElementById('ban-reason').textContent = ban.reason || 'No reason given.';
    function updateTimer() {
      let msLeft = ban.until - Date.now();
      if (msLeft <= 0) {
        localStorage.removeItem(BAN_KEY);
        overlay.remove();
        location.reload();
        return;
      }
      let sec = Math.floor(msLeft / 1000) % 60;
      let min = Math.floor(msLeft / 60000) % 60;
      let hr = Math.floor(msLeft / 3600000) % 24;
      let day = Math.floor(msLeft / 86400000);
      let timeStr = '';
      if (day > 0) timeStr += day + 'd ';
      if (hr > 0) timeStr += hr + 'h ';
      if (min > 0) timeStr += min + 'm ';
      if (sec > 0) timeStr += sec + 's';
      document.getElementById('ban-timer').textContent = timeStr.trim() || 'Permanent';
    }
    updateTimer();
    let interval = setInterval(updateTimer, 1000);
    // Block all pointer and keyboard events
    window.addEventListener('click', e => e.stopPropagation(), true);
    window.addEventListener('keydown', e => e.stopPropagation(), true);
    window.addEventListener('mousedown', e => e.stopPropagation(), true);
    window.addEventListener('touchstart', e => e.stopPropagation(), true);
    window.addEventListener('focus', e => e.stopPropagation(), true);
    // Block all main app functions
    window.login = window.register = window.refreshFiles = window.listFiles = window.createFile = window.createFolder = window.saveFile = window.deleteFile = window.showUsersModal = window.changeUserPassword = window.changeUserLimit = window.toggleUser = window.deleteUser = window.manualVerifyUser = window.manualApproveUser = window.togglePauseUser = function() { return false; };
  }
})();
